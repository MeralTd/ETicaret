    </div>
    <!--//header-->
    <!--breadcrumbs-->
    <div class="breadcrumbs">
        <div class="container">
            <ol class="breadcrumb breadcrumb1 animated wow slideInLeft" data-wow-delay=".5s">
                <li class="active">Sepet</li>
            </ol>
        </div>
    </div>
    <!--//breadcrumbs-->
    <!--contact-->

    <div class="wrap cf">
        <div class="heading cf">
            <h1>SEPETİM</h1>
            <a href="/Home/Index" class="continue">Alışverişe Devam Et</a>
        </div>
        <div class="cart">
            <!--    <ul class="tableHead">
                  <li class="prodHeader">Product</li>
                  <li>Quantity</li>
                  <li>Total</li>
                   <li>Remove</li>
                </ul>-->
            <ul class="cartWrap">

                @foreach (var item in Model.Urun)
                {
                    <li class="items even">

                        <div class="infoWrap">
                            <div class="cartSection">
                                <img src="~/Content/images/@Html.DisplayFor(modelItem => item.Resim)" alt="" class="itemImg" />
                                <p class="itemNumber">#QUE-007544-002</p>
                                <h3>@item.UrunAdi</h3>

                                <p> <input type="text" class="qty" placeholder="1" /> x @item.SatisFiyati.ToString("##.## ₺")</p>

                                <p class="stockStatus"> Stokta</p>
                            </div>

                            <div class="prodTotal cartSection">
                                <p>@item.SatisFiyati.ToString("##.## ₺")</p>
                            </div>
                            <div class="cartSection removeWrap">
                                <a href="/Kisilers/SepetSil/@Model.SepetId" class="sil">x</a>
                            </div>
                        </div>
                    </li>


                }


                <!--<li class="items even">Item 2</li>-->

            </ul>
        </div>

        <div class="promoCode">
            <label for="promo">Promosyon Kodunuz Var Mı?</label><input type="text" name="promo" placholder="Enter Code" />
            <a href="#" class="btn"></a>
        </div>

        <div class="subtotal cf">
            <ul>
                <li class="totalRow final"><span class="label">Toplam</span><span class="value">@Model.Urun</span></li>
                <li class="totalRow"><a href="#" class="btn continue">ÖDEME</a></li>
            </ul>
        </div>
    </div>



